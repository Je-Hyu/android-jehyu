<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/secondary">

    <LinearLayout
        android:id="@+id/search_cardView_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dropdown_button_college"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="8dp"
            app:boxBackgroundColor="@color/tertiary"
            app:boxStrokeColor="#E74646"
            app:boxStrokeWidth="2dp"
            android:layout_marginLeft="8dp">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView_college"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:fontFamily="@font/suit_medium"
                android:text="단과대" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dropdown_button_people_num"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="8dp"
            app:boxBackgroundColor="@color/tertiary"
            app:boxStrokeColor="#E74646"
            app:boxStrokeWidth="2dp"
            android:layout_marginLeft="8dp">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView_people_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:fontFamily="@font/suit_medium"
                android:text="인원" />
        </com.google.android.material.textfield.TextInputLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <ImageButton
                android:id="@+id/add_search_cardView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_design"
                android:contentDescription="." />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/add_person"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"/>

        </FrameLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>