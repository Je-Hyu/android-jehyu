<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dropdown_button"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:boxBackgroundColor="@color/tertiary"
            app:boxStrokeColor="#E74646"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:fontFamily="@font/suit_medium"
                android:text="단과대" />
        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/people_num_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:hint="인원 수"
            android:fontFamily="@font/suit_medium"
            android:textColorHint="#808080"
            android:background="@color/tertiary"
            android:enabled="true"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="@+id/dropdown_button"
            app:layout_constraintStart_toEndOf="@+id/dropdown_button"
            app:layout_constraintTop_toTopOf="@+id/dropdown_button" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/add_person"
        android:backgroundTint="@color/tertiary"
        app:layout_constraintBottom_toBottomOf="@+id/dropdown_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/people_num_button"
        app:layout_constraintTop_toTopOf="@+id/dropdown_button"
        android:contentDescription="."
        android:adjustViewBounds="true" />

        <Button
            android:id="@+id/search_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="검색"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
